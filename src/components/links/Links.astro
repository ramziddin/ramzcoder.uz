---
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";
import LinkCard from "./LinkCard.astro";
import Card from "../ui/card/Card.astro";
import CardContent from "../ui/card/CardContent.astro";
---

<div
  class="min-h-screen bg-black text-white flex flex-col items-center py-8 px-4"
>
  <Card>
    <CardContent class="items-center space-y-6">
      <Image
        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/telegram-peer-photo-size-2-5397652905063999223-1-0-0.jpg-scidbgqaxhPlLx8AnMQGmzsEbIXpIE.jpeg"
        alt="Profile picture"
        width={120}
        height={120}
        class="rounded-full object-cover"
        priority
      />

      <div class="text-center">
        <h1 class="text-2xl font-bold text-white">Ramziddin Makhmudov</h1>
        <p class="text-zinc-400 mt-2">Dasturlash haqida</p>
      </div>

      <div class="w-full space-y-4">
        <LinkButton
          href="https://youtube.com/@ramzcoder"
          text="YouTube Kanalim"
        />
        <LinkButton href="https://t.me/ramzcoder" text="Telegram Kanalim" />
        <LinkButton
          href="https://t.me/ramzcodercom"
          text="Dasturchilar Kommyunitisi"
        />
      </div>
    </CardContent>
  </Card>
</div>
